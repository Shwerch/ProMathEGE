<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.NoActionBar" parent="Theme.MyApplication">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:background">@color/void0</item>
    </style>

    <style name="MainButtons">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:backgroundTint">@color/MainButtonColor</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/MainButtonStrokeColor</item>
        <item name="strokeWidth">1.25dp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">21sp</item>

        <item name="android:shadowColor">@color/Background</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>

        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Buttons">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:backgroundTint">@color/ButtonColor</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/ButtonStrokeColor</item>
        <item name="strokeWidth">1.25dp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">16sp</item>

        <item name="android:shadowColor">@color/Background</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>

        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:elevation">10dp</item>
    </style>

</resources>